<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#1f9bd4">

        <ImageButton
            android:id="@+id/btn_back_to_category_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/nav_back"
            />

        <TextView
            android:id="@+id/txtview_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:text="注册"
            />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:text="请输入注册手机号"
        android:textColor="@color/colorBlackDarker"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/edit_input_register_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_line_lineout_transparent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:inputType="phone"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/setting_mail"
        android:hint="手机号"
        android:textColorHint="@color/colorBlackLight"/>


    <Button
        android:id="@+id/btn_get_register_validation_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_line_lineout_btn_bg"
        android:gravity="center"
        android:text="获取短信验证码"
        android:textSize="15sp"
        android:textColor="@color/colorWhiterPure"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <CheckBox
            android:id="@+id/checkbox_register_protocol_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:button="@drawable/selector_login_select_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/colorBlackLight"
            android:text="我已阅读并同意"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTxtBlueLight"
            android:background="@color/colorTransparent"
            android:autoLink="web"
            android:text="光明随心订用户协议"/>



    </LinearLayout>

</LinearLayout>