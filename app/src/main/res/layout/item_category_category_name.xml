<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@drawable/selector_product_category_selected_bg"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgview_category_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/list_milk"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        />

    <TextView
        android:id="@+id/txtview_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:textColor="@color/colorBlackDarker"
        android:textSize="10sp"
        />

</LinearLayout>
