<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/checkbox_item_shop_cart_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/selector_checkbox_btn"/>

        <ImageView
            android:id="@+id/imgview_item_shop_product_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_line_lineout"
            android:scaleType="centerInside"
            android:src="@mipmap/product02_312_162"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/txtview_item_shop_cart_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:textColor="@color/colorTxtBlack"
                android:textSize="12sp"
                android:text="新鲜杯（0脂）优倍（200ML）"/>

            <TextView
                android:id="@+id/txtview_item_shop_cart_send_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackLight"
                android:textSize="10sp"
                android:text="配送模式：每天送"/>

            <TextView
                android:id="@+id/txtview_item_shop_cart_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackLight"
                android:textSize="10sp"
                android:text="配送时间：2016-09-10到2016-09-31"/>

            <TextView
                android:id="@+id/txtview_item_shop_cart_unit_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackLight"
                android:textSize="10sp"
                android:text="每次配送：4份"/>

            <TextView
                android:id="@+id/txtview_item_shop_cart_product_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackLight"
                android:textSize="10sp"
                android:text="总数量：88份"/>

        </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtview_item_shop_cart_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhiterDarker"
                android:layout_gravity="top|center_horizontal"
                android:text="编辑"/>

            <TextView
                android:id="@+id/txtview_item_shop_cart_total_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/colorRedDarker"
                android:singleLine="true"
                android:textSize="12sp"
                android:text="152元"/>

        </FrameLayout>


</LinearLayout>