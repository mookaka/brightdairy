<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@color/colorWhiterPure">

    <TextView
        android:id="@+id/txtview_item_order_center_order_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorRedDarkerBtn"
        android:textSize="15sp"
        android:text="订单已取消"/>



    <Button
        android:id="@+id/txtview_item_order_center_order_operator_renewal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_line_lineout"
        android:textColor="@color/colorWhiterDarker"
        android:textSize="15sp"
        android:text="续订"/>

    <Button
        android:id="@+id/txtview_item_order_center_order_operator_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_line_lineout"
        android:textColor="@color/colorWhiterDarker"
        android:textSize="15sp"
        android:text="暂停"/>

    <Button
        android:id="@+id/txtview_item_order_center_order_operator_unsubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_line_lineout"
        android:textColor="@color/colorWhiterDarker"
        android:textSize="15sp"
        android:text="退订"/>

</LinearLayout>