<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#1f9bd4">

        <ImageButton
            android:id="@+id/btn_back_to_category_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/nav_back"
            />

        <TextView
            android:id="@+id/txtview_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:text="登录"
            />

    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:text="密码登录"
        android:textColor="@color/colorBlackDarker"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_line_lineout_ets_bg"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/edit_input_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/colorTransparent"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/login_user"
            android:hint="用户名/手机号/邮箱"
            android:textColorHint="@color/colorBlackLight"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlackLight"/>

        <EditText
            android:id="@+id/edit_input_user_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorTransparent"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:inputType="textPassword"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/login_password"
            android:hint="密码"
            android:textColorHint="@color/colorBlackLight"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_user_login_by_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_line_lineout_btn_bg"
        android:gravity="center"
        android:text="登录"
        android:textSize="15sp"
        android:textColor="@color/colorWhiterPure"/>

    <Button
        android:id="@+id/btn_find_psw_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:text="忘记密码?"
        />

</LinearLayout>