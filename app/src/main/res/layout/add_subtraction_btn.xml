<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="90dp"
              android:layout_height="25dp"
    android:background="@drawable/shape_add_subtraction_bg">

    <TextView
        android:id="@+id/txtview_btn_subtraction"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/colorBlackLight"
        android:textSize="18sp"
        android:text="-"
        />

    <EditText
        android:id="@+id/edit_input_show_num"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:minWidth="30dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:maxLength="3"
        android:minEms="1"
        android:background="@drawable/shape_add_subtraction_et_bg"
        android:textSize="15sp"
        android:textColor="@color/colorBlackDarker"/>

    <TextView
        android:id="@+id/txtview_btn_add"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorBlackLight"
        android:textSize="18sp"
        android:text="+"
        />

</LinearLayout>