<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="home_bottom_bar">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textSize">@dimen/bottom_bar_title</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="product_detail_popup_check_send_mode">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/selector_send_mode_check_red_bg</item>
        <item name="android:button">@null</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="product_detail_popup_check_send_other_mode">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/selector_send_other_mode_check_bg</item>
        <item name="android:textColor">@drawable/selector_send_mode_other_txt_color</item>
        <item name="android:button">@null</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="popupanim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popup_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_out</item>
    </style>
    
    <style name="fragment_order_center_tabs">
        <item name="android:background">@color/colorWhiterPure</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTxtBlack</item>
    </style>

    <style name="edit_usr_info_activity_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="edit_usr_info_activity_edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/colorBlackLight</item>
        <item name="android:background">@drawable/shape_line_lineout</item>
    </style>

</resources>
